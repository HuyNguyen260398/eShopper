<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Bootstrap Dashboard by Bootstrapious.com</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="all,follow">
    <!-- Bootstrap CSS-->
    <link rel="stylesheet" href="~/Template/AdminLite/vendor/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome CSS-->
    <link rel="stylesheet" href="~/Template/AdminLite/vendor/font-awesome/css/font-awesome.min.css">
    <!-- Fontastic Custom icon font-->
    <link rel="stylesheet" href="~/Template/AdminLite/css/fontastic.css">
    <!-- Google fonts - Roboto -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700">
    <!-- jQuery Circle-->
    <link rel="stylesheet" href="~/Template/AdminLite/css/grasp_mobile_progress_circle-1.0.0.min.css">
    <!-- Custom Scrollbar-->
    <link rel="stylesheet" href="~/Template/AdminLite/vendor/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.css">
    <!-- theme stylesheet-->
    <link rel="stylesheet" href="~/Template/AdminLite/css/style.default.css" id="theme-stylesheet">
    <!-- Custom stylesheet - for your changes-->
    <link rel="stylesheet" href="~/Template/AdminLite/css/custom.css">
    <!-- Favicon-->
    <link rel="shortcut icon" href="~/Template/AdminLite/img/favicon.ico">
    <!-- Tweaks for older IEs-->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
</head>
<body>
    <!-- Side Navbar -->
    <nav class="side-navbar">
        <div class="side-navbar-wrapper">
            <!-- Sidebar Header    -->
            <div class="sidenav-header d-flex align-items-center justify-content-center">
                <!-- User Info-->
                <div class="sidenav-header-inner text-center">
                    <img src="~/Template/AdminLite/img/COMMUNICATION.png" alt="manager" class="img-fluid rounded-circle">
                    <h2 class="h5">@Session["A_Username"]</h2><span>Manager</span>
                </div>
                <!-- Small Brand information, appears on minimized sidebar-->
                <div class="sidenav-header-logo">
                    <a href=@Url.Action("IndexAdmin", "Index") class="brand-small text-center">
                        <strong class="text-primary">ESP</strong>
                    </a>
                </div>
            </div>
            <!-- Sidebar Navigation Menus-->
            <div class="main-menu">
                <ul id="side-main-menu" class="side-menu list-unstyled">
                    <li><a href=@Url.Action("IndexAdmin", "Index")><i class="icon-home"></i>Home</a></li>
                    <li>
                        <a href="#manage" aria-expanded="false" data-toggle="collapse">
                            <i class="fa fa-gears"></i>
                            Manage
                        </a>
                        <ul id="manage" class="collapse list-unstyled ">
                            <li><a href="@Url.Action("Index", "Brands")"><i class="icon-website"></i>Brand</a></li>
                            <li><a href="@Url.Action("Index", "Categories")"><i class="icon-padnote"></i>Category</a></li>
                            <li><a href="@Url.Action("Index", "Products")"><i class="icon-screen"></i>Product</a></li>
                            <li><a href="@Url.Action("Customer", "Order")"><i class="icon-user"></i>Customer</a></li>
                            <li><a href="@Url.Action("Index", "Order")"><i class="icon-bill"></i>Order</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="#report" aria-expanded="false" data-toggle="collapse">
                            <i class="fa fa-bar-chart"></i>
                            Report
                        </a>
                        <ul id="report" class="collapse list-unstyled ">
                            <li><a href="@Url.Action("DateReport", "Report")"><i class="icon-user"></i>Daily</a></li>
                            <li><a href="@Url.Action("MonthReport", "Report")"><i class="icon-home"></i>Monthly</a></li>
                            <li><a href="@Url.Action("YearReport", "Report")"><i class="fa fa-globe"></i>Yearly</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="page">
        <!-- navbar-->
        <header class="header">
            <nav class="navbar">
                <div class="container-fluid">
                    <div class="navbar-holder d-flex align-items-center justify-content-between">
                        <div class="navbar-header">
                            <a id="toggle-btn" href="#" class="menu-btn"><i class="fa fa-navicon"> </i></a><a href="@Url.Action("Manager", "Home")" class="navbar-brand">
                                <div class=" d-none d-sm-inline-block"><strong class="text-primary" style="font-size: 20px">E-Shopper </strong><span> Online Shop</span></div>
                            </a>
                        </div>
                        <ul class="nav-menu list-unstyled d-flex flex-md-row align-items-md-center">
                            <!-- Log out-->
                            <li class="nav-item"><a href="@Url.Action("Logout","Admin")" class="nav-link logout"> <span class="d-none d-sm-inline-block">Logout</span><i class="fa fa-sign-out"></i></a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <section class="dashboard-header section-padding">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </section>

        <footer class="main-footer">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-6">
                        <p>E-Shopper &copy; 2019-2024</p>
                    </div>
                    <div class="col-sm-6 text-right">
                        <p>Design by <a href="https://bootstrapious.com" class="external">Bootstrapious</a></p>
                        <!-- Please do not remove the backlink to us unless you support further theme's development at https://bootstrapious.com/donate. It is part of the license conditions and it helps me to run Bootstrapious. Thank you for understanding :)-->
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <!-- JavaScript files-->
    <script src="~/Template/AdminLite/vendor/jquery/jquery.min.js"></script>
    <script src="~/Template/AdminLite/vendor/popper.js/umd/popper.min.js"></script>
    <script src="~/Template/AdminLite/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Template/AdminLite/js/grasp_mobile_progress_circle-1.0.0.min.js"></script>
    <script src="~/Template/AdminLite/vendor/jquery.cookie/jquery.cookie.js"></script>
    <script src="~/Template/AdminLite/vendor/chart.js/Chart.min.js"></script>
    <script src="~/Template/AdminLite/vendor/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/Template/AdminLite/vendor/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/Template/AdminLite/js/charts-home.js"></script>
    <script src="~/Template/AdminLite/js/charts-custom.js"></script>
    <!-- Main File-->
    <script src="~/Template/AdminLite/js/front.js"></script>

    @RenderSection("Scripts", false)

</body>
</html>